@model MovieTheater.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}

<div id="log-in" class="tab-pane">
    <form class="form-horizontal" role="form" >
        <h2>Log in</h2>
        @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

                <div class="form-group">
                        @Html.LabelFor(m => m.UserName, htmlAttributes: new { @class="col-sm-2 control-label" })
                        <div class="col-sm-2">
                            @Html.TextBoxFor(m => m.UserName, htmlAttributes : new { @class="form-control", @placeholder="username" })
                            @Html.ValidationMessageFor(m => m.UserName)
                        </div>
                </div>
                <div class="form-group">
                        @Html.LabelFor(m => m.Password, htmlAttributes: new { @class="col-sm-2 control-label" })
                        <div class="col-sm-2">
                            @Html.PasswordFor(m => m.Password, htmlAttributes : new { @class="form-control", @placeholder="username" })
                            @Html.ValidationMessageFor(m => m.Password)
                        </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <div class="checkbox">
                            <label>
                                @Html.CheckBoxFor(m => m.RememberMe) Remember Me?
                            </label>
                        </div>
                    </div>
                </div>    
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-default" onclick="">Log in</button>
                    </div>
                </div>
            <p>
                @Html.ActionLink("Register", "Register") if you don't have an account.
            </p>
        }
    </form>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
