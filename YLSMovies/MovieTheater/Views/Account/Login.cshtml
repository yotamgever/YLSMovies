@model MovieTheater.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}
<div id="log-in" class="tab-pane">
    <form action="Account/Login" method="post" class="form-horizontal" role="form">
        <h2>Log in</h2>
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @ViewBag.errorMessage
        <div class="form-group">
            <label for="login-username" class="col-sm-2 control-label">Username</label>
            <div class="col-sm-3">
                <input type="text" class="form-control" id="login-username" placeholder="Username" name="UserName">
            </div>
        </div>
        <div class="form-group">
            <label for="login-password" class="col-sm-2 control-label">Password</label>
            <div class="col-sm-3">
                <input type="password" class="form-control" id="login-password" name="Password">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" name="RememberMe" id="RememberMe" value="true" class="col-sm-offset-2"> Remember Me
                        <input type="hidden" value="false" name="RememberMe">
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default" onclick="filterSearches()">Log in</button>
            </div>
        </div>
        <p>
            <li><a href="#register" role="tab" data-toggle="tab">Register</a></li> if you don't have an account.
        </p>
    </form>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
